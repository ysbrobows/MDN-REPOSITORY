@model List<MDN.ViewModels.AnuncioGridVM>


    @{
        ViewData["Title"] = "Index";
    }

    <h2>Meus Anúncios</h2>

    <p>
        <a asp-action="Create">Create New</a>
    </p>

    @foreach (var item in Model)
    {
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-2">
                    <img src="@item.caminhoImagem" alt="Primeiro Slide" class="img-responsive" style="max-width: 100px; max-height: 100px">
                </div>
                <div class="col-md-5">
                    <h3>@Html.DisplayFor(modelItem => item.T001_TITULO)</h3>
                    <h5>R$ @Html.DisplayFor(modelItem => item.T001_PRECO)</h5>
                    <h6>120 Visitas</h6>
                    <a asp-action="Edit" asp-route-id="@item.T001_ID_PRODUTO">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        Editar
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.T001_ID_PRODUTO">
                        <span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span>
                        Vendi
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.T001_ID_PRODUTO">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        Excluir
                    </a>
                </div>
                <div class="col-md-2">
               
                </div>
            </div>
        </div>


    }
