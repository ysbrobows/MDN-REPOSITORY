<h2>@Model.Produto.T001_TITULO</h2>

<div class="col-md-6">


    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
        <div class="carousel-inner" role="listbox">
            @{int contador = 0; }
            @foreach (var imagem in @Model.Imagens)
            {
                var caminho = "https://" + @Model.caminho + "/uploadImages/" + Model.Produto.T001_ID_PRODUTO + "/" + imagem.Name;

                if (contador == 0)
                {
                    <div class="item active">
                        <img  src="@caminho" alt="Primeiro Slide" class="img-responsive">
                    </div>
                }
                if (contador != 0)
                {
                    <div class="item">
                        <img  src="@caminho" alt="Segundo Slide" class="img-responsive">
                    </div>
                }
                contador++;

            }
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    
</div>


