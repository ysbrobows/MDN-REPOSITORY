<div class="col-md-12">
    <div class="line mb10px">
        <div class="section_OLXad-header">
            <a href="#gocontent" id="gocontent"></a>
            <div class="OLXad-title-box mb10px">
                <h1 id="ad_title" class="OLXad-title">
                    @Model.Produto.T001_TITULO
                </h1>
            </div>
            <div class="OLXad-date mb5px">
                <p class="text" style="color:gray">
                    Inserido em: 10 Setembro às 07:19
                </p>
            </div>
        </div>


        <div class="section_OLXad-price-header">
            <div class="price-header-box">
                <div class="OLXad-price-box">
                    <span class="OLXad-price">R$ @Model.Produto.T001_PRECO</span>
                </div>
                <span class="OLXad-price-box-arrow"></span>
            </div>
        </div>
    </div>
</div>
<div class="col-md-7">


    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
        <div class="carousel-inner" role="listbox">
            @{int contador = 0; }
            @foreach (var imagem in @Model.Imagens)
            {
                var caminho = "https://" + @Model.caminho + "/uploadImages/" + Model.Produto.T001_ID_PRODUTO + "/" + imagem.Name;

                if (contador == 0)
                {
                    <div class="item active">
                        <img src="@caminho" alt="Primeiro Slide" class="img-responsive" style="max-width: 500px; max-height: 500px">
                    </div>
                }
                if (contador != 0)
                {
                    <div class="item">
                        <img src="@caminho" alt="Segundo Slide" class="img-responsive" style="max-width: 500px; max-height: 500px">
                    </div>
                }
                contador++;

            }
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</div>


